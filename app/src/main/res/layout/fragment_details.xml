<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".zhichuan.bear.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/river_details_width"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Width"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/river_details_width"
                app:layout_constraintTop_toTopOf="@+id/river_details_width"
                android:text="Ã—"
                android:layout_marginStart="8dp"
                android:id="@+id/textView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/textView"
                android:text="Height"
                android:id="@+id/river_details_height"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="@string/river_details_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/river_details_width"
                app:layout_constraintStart_toStartOf="@+id/river_details_width"
                android:id="@+id/textView12"
                android:layout_marginTop="32dp"/>

        <TextView
                android:text="Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/river_details_url"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"/>

        <TextView
                android:text="@string/river_details_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/river_details_url"
                app:layout_constraintStart_toStartOf="@+id/river_details_url"
                android:layout_marginTop="32dp"
                android:id="@+id/textView10"/>

        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/river_details_date"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>